{
  "name": "@cyca/electron-sirv",
  "version": "0.2.0-alpha.0",
  "description": "Static file serving for Electron apps",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch"
  },
  "devDependencies": {
    "mrmime": "^2.0.1",
    "totalist": "^3.0.1",
    "tsdown": "latest"
  },
  "peerDependencies": {
    "electron": ">=32.0.0 <40.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
